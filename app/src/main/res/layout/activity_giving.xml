<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/gray"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GivingActivity">




    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Giving"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/money"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Name"
        android:layout_marginLeft="12dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Full Name"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/lastname_tv"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/lastname"
        tools:layout_editor_absoluteX="16dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Email"
        android:layout_marginLeft="12dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Email"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/white"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/lastname_tv"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Item 1"
        android:layout_marginLeft="12dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center|left"
        android:layout_gravity="center"
        android:id="@+id/spinnerItem1"
        android:textSize="15sp"
        android:background="@android:color/white"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:hint="Select Item 1"
        app:ms_hint_color="@android:color/darker_gray" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edittextItem1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="0.0"
        android:inputType="number"
        android:visibility="gone"
        android:layout_margin="12dp"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/lastname_tv"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/lastname"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Item 2"
        android:layout_marginLeft="12dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center|left"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:id="@+id/spinnerItem2"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:hint="Select Item 2"
        app:ms_hint_color="@android:color/darker_gray" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edittextItem2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="0.0"
        android:inputType="number"
        android:layout_margin="12dp"
        android:visibility="gone"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/lastname_tv"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/lastname"
        tools:layout_editor_absoluteX="16dp" />



    <Button
        android:id="@+id/give"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give"/>



</LinearLayout>

</androidx.core.widget.NestedScrollView>